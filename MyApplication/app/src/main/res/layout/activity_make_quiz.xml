<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout="@+id/relative"
    tools:context=".MakeQuiz">


             <EditText
                 android:inputType="text"
                 android:layout_width="350dp"
                 android:layout_height="wrap_content"
                 android:hint="Title: "
                 android:id="@+id/editTextTitle" />

            <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="Enter Question: "
                android:ems="10"
                android:id="@+id/editTextQuestion"
                android:layout_below="@+id/editTextTitle" />

             <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="Enter Answer 1: "
                android:ems="10"
                android:id="@+id/editTextAnswerOne"
                android:layout_below="@+id/editTextQuestion"/>

             <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="Enter Answer 2: "
                android:ems="10"
                android:id="@+id/editTextAnswerTwo"
                android:layout_below="@+id/editTextAnswerOne"/>

            <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="Enter Answer 3: "
                android:ems="10"
                android:id="@+id/editTextAnswerThree"
                android:layout_below="@+id/editTextAnswerTwo"/>

             <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="Enter Correct Answer: "
                android:ems="10"
                android:id="@+id/editTextCorrectAnswer"
                android:layout_below="@+id/editTextAnswerFour"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_button"
        android:id="@+id/submit_button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/editTextCorrectAnswer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_quizzes"
        android:id="@+id/all_quizzes_button"
        android:layout_gravity="right" />

</LinearLayout>
