<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.vcu.wes.myapplication.FlashActivity"
    android:background="@drawable/background_inverted">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="@string/take_flashcards"
        android:id="@+id/take_flashcard_button"
        android:background="@drawable/study_flash_button"
        android:layout_below="@+id/help_btn1"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="@string/make_flashcards"
        android:id="@+id/make_flash_button"
        android:layout_below="@+id/take_flashcard_button"
        android:layout_alignLeft="@+id/take_flashcard_button"
        android:layout_alignStart="@+id/take_flashcard_button"
        android:background="@drawable/make_flash_button"/>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="@string/all_flashcards"
        android:id="@+id/all_flash_button"
        android:layout_below="@+id/make_flash_button"
        android:layout_alignLeft="@+id/make_flash_button"
        android:layout_alignEnd="@+id/make_flash_button"
        android:layout_alignRight="@+id/make_flash_button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/all_flash_button"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/help_btn1"
        android:background="@drawable/ic_help_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="showTutorial"/>
</RelativeLayout>
